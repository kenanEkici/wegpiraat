<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             Title="{Binding Title}"
             x:Class="Wegpiraat.Views.ProfilePage"
             BackgroundColor="White">
    <ContentPage.Content>
        <ScrollView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" Margin="5">
                    <Label Text="{Binding User.Email}" HorizontalTextAlignment="Center" FontSize="Large"  />
                    <Label Text="{Binding User.Username}" HorizontalTextAlignment="Center" FontSize="Medium" />
                    <Label Text="{Binding User.FirstName}" HorizontalTextAlignment="Center" FontSize="Small" TextColor="Silver" />
                    <Label Text="{Binding User.LastName}" HorizontalTextAlignment="Center" FontSize="Small" TextColor="Silver" />
                </StackLayout>
                <StackLayout Orientation="Vertical" VerticalOptions="Center" Margin="5" HorizontalOptions="FillAndExpand">
                    <Button Text="Posts"></Button>
                    <Button Text="Likes"></Button>
                    <Button Text="Comments"></Button>
                </StackLayout>
                <StackLayout  HorizontalOptions="FillAndExpand" Margin="5">
                    <Button 
                        Text="Logout"
                        Command="{Binding LogoutCommand}"
                        CommandParameter="/LoginPage/"> 
                    </Button>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
