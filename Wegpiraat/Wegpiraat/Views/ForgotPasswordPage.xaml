<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wegpiraat.Views.ForgotPasswordPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Please fill in your email address"></Label>
            <Entry Text="{Binding Email}"></Entry>
            <Button Text="Send email" 
                    Command="{Binding ResetCommand}"
                    CommandParameter="/ConfirmPasswordResetPage/">
            </Button>
            <Button Text="I already have a reset token"
                    Command="{Binding NonResetCommand}"
                    CommandParameter="/ConfirmPasswordResetPage/">                
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>