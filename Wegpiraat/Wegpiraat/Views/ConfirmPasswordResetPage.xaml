<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wegpiraat.Views.ConfirmPasswordResetPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Notification}"></Label>
            <Entry Text="{Binding Email}"></Entry>
            <Entry Text="{Binding Token}"></Entry>
            <Entry Text="{Binding Password}"></Entry>
            <Entry Text="{Binding ConfirmPassword}"></Entry>
            <Button Text="Reset password"
                    Command="{Binding ResetPasswordCommand}"
                    CommandParameter="/LoginPage/">
            </Button>
            <Button Text="Or go back to login"
                    Command="{Binding LoginCommand}"
                    CommandParameter="/LoginPage/">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>